{
  "name": "lal-lambda-tools",
  "version": "1.0.4",
  "description": "LiveAltLife Lambda tools for template creation and deployment",
  "main": "dist/index.js",
  "bin": {
    "lal-lambda-tools": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "dev": "nodemon --exec npx tsx src/index.ts",
    "dev:watch": "nodemon --watch src --ext ts --exec tsx src/index.ts",
    "build": "tsc && node -e \"require('fs-extra').ensureDirSync('dist/templates')\" && node -e \"require('fs-extra').copySync('src/templates', 'dist/templates')\" && node -e \"require('fs-extra').copySync('package.json', 'dist/package.json')\"",
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "link": "npm link",
    "unlink": "npm unlink -g",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "preversion": "npm run build"
  },
  "author": "LiveAltLife",
  "license": "UNLICENSED",
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.825.0",
    "@aws-sdk/client-sts": "^3.826.0",
    "@aws-sdk/credential-providers": "^3.844.0",
    "adm-zip": "^0.5.16",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "fs-extra": "^11.3.0",
    "liquidjs": "^10.21.1",
    "ora": "^8.2.0",
    "yaml": "^2.8.0",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.15.29",
    "nodemon": "^3.1.10",
    "typescript": "^5.8.3"
  }
}